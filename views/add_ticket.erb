<div class="card">
  <h4 class="card-header">Add Ticket</h4>
  <div class="card-body">
      <% if @errors %>
        <% @errors.each do |error| %>
          <div class="alert alert-danger" role="alert">
            <%= error%>
          </div>
        <% end %>
      <% end %>
    <form method="post" action="/add_ticket">
      <div class="form-row">
        <div class="form-group">
          <input class="form-control" name="id" value=<%= @next_id %> readonly>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-8">
            <input type="text" class="form-control" placeholder="Street" name="street" required="true" maxlength="255">
        </div>
        <div class="form-group col-md-4">
            <input type="number" class="form-control" placeholder="Number" name="number" required="true" min="0">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-auto">
          <input type="text" class="form-control" placeholder="Neighbordhood" name="neighbordhood" required="true" maxlenght="60">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="Commune">Commune</label>
          <select name="commune">
          <% @commune.each do |commu| %>
            <option value="<%= commu %>"><%= commu %></option>
          <% end %>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label for="source_channel">Source Channel</label>
          <select name="source_channel">
            <% @source_channel.each do |sc| %>
              <option value="<%= sc %>"><%= sc %></option>
            <% end %>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label for="type_of_ticket">Type of ticket</label>
          <select name="type_of_ticket">
          <% @type_of_ticket.each do |tor| %>
            <option value="<%= tor %>"><%= tor %></option>
          <% end %>
          </select>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="category">Category</label>
          <select name="category">
          <% @categories.each do |cat| %>
            <option value="<%= cat %>"><%= cat %></option>
          <% end %>
          </select>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="GENDER">GENDER</label>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label class="radio-inline"><input type="radio" name="gender" value="femenino"> Female </label>
          <label class="radio-inline"><input type="radio" name="gender" value="masculino"> Male</label>
          <label class="radio-inline"><input type="radio" name="gender" value="otro" checked> Other</label>
        </div>
      </div>
        <div class="form-group col-md-6">
          <button type="submit" class="btn btn-primary">Submit New Ticket</button>
          <a class="btn btn-secondary" href="/" role="button">Cancel</a>
        </div>
      </div>
    </form>
  </div>