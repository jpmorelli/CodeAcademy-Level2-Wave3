<div class="card">
  <h4 class="card-header">Add Category</h4>
  <div class="card-body">
      <% if @errors %>
        <% @errors.each do |error| %>
          <div class="alert alert-danger" role="alert">
            <%= error%>
          </div>
        <% end %>
      <% end %>
<form method="post" action="/add_category">
  <div class="form-row">
    <div class="form-group col-auto">
    </div>
    <div class="form-group col-md-8">
        <input type="text" class="form-control" placeholder="New category" name="new_category" required="true" maxlength="70">
    </div>
  </div>
  <div class="form-group col-md-6">
        <button type="submit" class="btn btn-primary">Submit New Category</button>
        <a class="btn btn-secondary" href="/all_categories" role="button">Cancel</a>
      </div>
</form>